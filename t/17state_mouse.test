INIT
WANTSTATE M

!Mouse in simple button report mode
RESET
PUSH "\e[?1000h"
  setmousefunc func

!Press 1
MOUSE 1 1 0,0
  output "\e[M\x20\x21\x21"

!Release 1
MOUSE 0 1 0,0
  output "\e[M\x23\x21\x21"

!Button 2
MOUSE 1 2 0,0
  output "\e[M\x21\x21\x21"
MOUSE 0 2 0,0
  output "\e[M\x23\x21\x21"

!Position
MOUSE 1 1 10,20
  output "\e[M\x20\x35\x2b"

MOUSE 0 0 10,21
  # no output

!Drag events
RESET
PUSH "\e[?1002h"
  setmousefunc func

MOUSE 1 1 5,5
  output "\e[M\x20\x26\x26"
MOUSE 0 0 5,6
  output "\e[M\x40\x27\x26"
MOUSE 0 0 6,6
  output "\e[M\x40\x27\x27"
MOUSE 0 0 6,6
  # no output
MOUSE 0 1 6,6
  output "\e[M\x23\x27\x27"
MOUSE 0 0 6,7
  # no output

!Non-drag motion events
PUSH "\e[?1003h"
  setmousefunc func

MOUSE 0 0 6,8
  output "\e[M\x43\x29\x27"

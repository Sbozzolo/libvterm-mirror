INIT
WANTSCREEN M

!Mouse in simple button report mode
RESET
PUSH "\e[?1000h"
  setmousefunc func

!Press 1
MOUSEMOVE 0,0 0
MOUSEBTN d 1 0
  output "\e[M\x20\x21\x21"

!Release 1
MOUSEBTN u 1 0
  output "\e[M\x23\x21\x21"

!Button 2
MOUSEBTN d 2 0
  output "\e[M\x21\x21\x21"
MOUSEBTN u 2 0
  output "\e[M\x23\x21\x21"

!Position
MOUSEMOVE 10,20 0
MOUSEBTN d 1 0
  output "\e[M\x20\x35\x2b"
